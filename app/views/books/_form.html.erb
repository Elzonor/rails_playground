      <ul>
      <% book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :title %>
    <%= form.text_field :title %>
  </div>

	<div class="field">
		<%= form.label :author %>
		<%= collection_select( :author, :author_id, Author.all, :id, :name, { include_blank: true }, { multiple: false } ) %>
	</div>

	<div class="field">
		<%= form.label :publisher %>
		<%= collection_select( :publisher, :publisher_id, Publisher.all, :id, :name, { include_blank: true }, { multiple: false } ) %>
	</div>

  <div class="field">
    <%= form.label :year %>
    <%= form.text_field :year %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
